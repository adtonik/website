<div class='hero-unit'>

  <div class='logo-spotlights'>
    <%= image_tag 'radial light.png', class: 'radial-light' %>
    <%= image_tag 'spotlights.png', class: 'spotlights' %>
    <%= image_tag 'logo.png' %>
  </div>

  <h2>TV Advertising for the connected experience</h2>

</div>

<div class='hr'>
  <%= image_tag 'hr.png' %>
</div>

<div class='content'>
  <h1>Curious about the Future of TV?</h1>

  <div class='row'>
    <div class='span-one-third quote-image'>
      <%= image_tag 'quote.png' %>
    </div>

    <div class='span-one-third'>
      <%= image_tag "twitter.png" %>
    </div>

    <div class='span-one-third quote-image'>
      <%= image_tag 'quote.png' %>
    </div>

  </div>

  <div class='row'>
    <div class='span-one-third'>
      <ul class='quotes'>
        <% @left_quotes.each do |quote| %>
        <li>
          <p><%= quote[:quote] %></p>

          <div class='quoted'>
            <%= quote[:author] %>
          </div>          
        </li>
        <% end %>
      </ul>
    </div>

    <div class='span-one-third contact-info'>
      <span class='twitter-user'><%= link_to "@AdTonik", "http://twitter.com/adtonik"%></span>

      <button class='orange button' data-controls-modal="email-modal" data-keyboard="true" data-backdrop="true">Contact Us</button>
    </div>

    <div class='span-one-third'>
      <ul class='quotes'>
        <% @right_quotes.each do |quote| %>
        <li>
          <p><%= quote[:quote] %></p>

          <div class='quoted'>
            <%= quote[:author] %>
          </div>          
        </li>
        <% end %>
      </ul>      
    </div>
  </div>
</div>

<div id='email-modal' class='modal hide fade in' style='display: none'>

  <div class='modal-header'>
    <a href='#' class='close'>Ã—</a>
    <h3>Curious about the future of TV?</h3>
  </div>

  <%= form_for :email, :url => email_submit_path, :remote => true do |f| %>
    <div class='modal-body'>
      <fieldset>
        <label for='email_address'>Email Address</label>
        <div class='input'>
          <input class='xlarge' id='email_address' name='email_address' size='30' type='text'>
        </div>
      </fieldset>
    </div>

    <div class='modal-footer'>
      <input type='submit' class='btn secondary' value='Submit'>
    </div>
  <% end %>
</div>

<script>

$(function() {  
  $('ul.quotes').quote_rotator({randomize_first_quote: true});
});

</script>